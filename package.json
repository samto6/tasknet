{
  "name": "tasknet",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "analyze": "ANALYZE=true next build",
    "start": "next start",
    "lint": "eslint",
    "test": "npm run test:rls && npm run test:api",
    "test:e2e": "playwright test",
    "test:e2e:smoke": "playwright test smoke.spec.ts",
    "test:e2e:negative": "playwright test negative.spec.ts",
    "test:e2e:performance": "playwright test performance.spec.ts",
    "test:e2e:security": "playwright test security.spec.ts",
    "test:rls": "node --env-file=.env.local --test --test-concurrency=1 tests/rls/**/*.test.mjs",
    "test:api": "node --env-file=.env.local --test --test-concurrency=1 tests/api/**/*.test.mjs",
    "test:all": "npm run test && npm run test:e2e"
  },
  "dependencies": {
    "@react-email/render": "^1.3.1",
    "@supabase/ssr": "^0.7.0",
    "@supabase/supabase-js": "^2",
    "date-fns": "^4.1.0",
    "next": "16.0.7",
    "prettier": "^3.6.2",
    "react": "19.1.0",
    "react-dom": "19.1.0",
    "resend": "^6.1.2",
    "zod": "^4.1.11"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3",
    "@next/bundle-analyzer": "^16.0.7",
    "@playwright/test": "^1.55.1",
    "@tailwindcss/postcss": "^4",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "eslint": "^9",
    "eslint-config-next": "16.0.7",
    "eslint-plugin-react-hooks": "^7.0.1",
    "tailwindcss": "^4",
    "typescript": "^5"
  }
}
